  # ==================== REGEX PATTERNS ====================
  - regex: motif_explicit
    examples: |
      - (?i)(?:le|la|l')\s*motif\s+(?:est|de\s+(?:la\s+)?demande\s+(?:est|:))?\s*:?\s*(remplacement|création\s+de\s+poste|complément\s+d'effectif|relation\s+école|programme\s+pépinière|programme\s+étoiles\s+montantes|restructuration|support\s+du\s+service|intérim|interim)
      - (?i)motif\s*:?\s*(remplacement|création\s+de\s+poste|complément\s+d'effectif|relation\s+école|programme\s+pépinière|programme\s+étoiles\s+montantes|restructuration|support\s+du\s+service|intérim|interim)
      - (?i)c'est\s+un\s+(remplacement|intérim|interim)
      - (?i)il\s+s'agit\s+d'un[e]?\s+(remplacement|création\s+de\s+poste)

  - regex: situation_budget_explicit
    examples: |
      - (?i)situation\s+budg[ée]taire\s*(?:est|:)?\s*(budg[ée]tis[ée]e?|hors\s+budget|non\s+applicable)
      - (?i)(?:poste|budget)\s+(budg[ée]tis[ée]e?|valid[ée]e?|approuv[ée]e?)
      - (?i)c'est\s+(budg[ée]tis[ée]e?|hors\s+budget)
      - (?i)(hors\s+budget|non\s+budg[ée]tis[ée]e?)
      - (?i)avec\s+une\s+situation\s+budg[ée]taire\s+(budg[ée]tis[ée]e?)

  - regex: justification_explicit
    examples: |
      - (?i)justifi[ée]e?\s+(?:par|est|:)\s+(.{20,})
      - (?i)motiv[ée]e?\s+par\s+(.{20,})
      - (?i)(?:car|parce\s+que|à\s+cause\s+de)\s+(.{20,})
      - (?i)la\s+raison\s+(?:est|c'est)\s+(.{20,})
      - (?i)(?:afin\s+de|pour|dans\s+le\s+but\s+de)\s+(.{20,})

